include<stdio.h>
#include<stdlib.h>
struct node
{
        int data;
        struct node *next;
        };
        struct node * create(struct node *list)
        {
        int i,n;
        struct node *newnode,*temp;
        printf("enter limit:");
        scanf("%d",&n);
        for(i=0;i<n;i++)
        {
        newnode=(struct node *)malloc(sizeof(struct node));
        printf("enter value:");
        scanf("%d",&newnode->data);
        newnode->next==NULL;
        if(list==NULL)
        {
        list=newnode;
        temp=newnode;
        }
        else
        {
        temp->next=newnode;
        temp=newnode;
        }
        }
        return list;
        }
        int search(struct node *list,int num)
{
        struct node *temp;
        int i;
        for(i=0,temp=list;temp!=NULL;temp=temp->next,i++)
        {
        if(temp->data==num)

        return i;
        }
        return -1;
        }
        int main()
        {
        int k,num;
        struct node *list=NULL;
        list=create(list);
        printf("enter number to search:");
        scanf("%d",&num);
        k=search(list,num);
        if(k==-1)
        printf("not found");
        else
        printf("found:");
        }

